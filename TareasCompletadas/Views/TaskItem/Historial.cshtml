@model IEnumerable<TareasCompletadas.Models.TaskHistorial>


<div class="container align-items-center">
    <div class="row align-items-start">
        <div class="col border border-3 border-dark rounded m-2">
            <h2 class="text-center">Historial de tareas creadas</h2>
            <div class="row mt-3">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-6 col-xl-6 mb-4">
                        <div class="card text-center border border-2 border-primary shadow-0 ">
                            <div class="card-body">
                                <h5 class="card-title">@item.Titulo</h5>
                                <p class="card-text">@item.Descripcion</p>
                                <i class="bi bi-journals" style="font-size: 3rem; color:lawngreen"></i>
                            </div>
                            <div class="card-footer">Fecha limite: @item.FechaEntrega</div>
                            <div class="card-footer" style="color:brown">Fecha de Creacion: @item.FechaCreacion</div>
                        </div>
                    </div>
                }
                <div class="form-group mt-4 text-center" style="margin-bottom:10px">
                    <a asp-action="Index" class="btn btn-secondary">Vista principal</a>
                </div>
            </div>
        </div>
    </div>
</div>
