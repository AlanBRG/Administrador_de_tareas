@model TareasCompletadas.Models.TaskItem
@{
    ViewData["Title"] = "ImprimirPDF";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Tarea</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            font-size: 24px;
        }

        .tarea-info {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
        }

        .label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Detalle de Tarea</h1>
    <div class="tarea-info">
        <p class="label">Título:</p>
        <p>@Model.Titulo</p>
    </div>

    <div class="tarea-info">
        <p class="label">Descripción:</p>
        <p>@Model.Descripcion</p>
    </div>

    <div class="tarea-info">
        <p class="label">Fecha de Entrega:</p>
        <p>@Model.FechaEntrega</p>
    </div>

    <div class="tarea-info">
        <p class="label">Estado:</p>
        @if (Model.IsCompleted)
        {
            <p>Completado</p>
        }
        else
        {
            <p>En proceso</p>
        }
    </div>
</body>
</html>